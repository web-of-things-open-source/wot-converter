{
  "@context": "https://www.w3.org/2019/wot/td/v1",
  "id": "urn:HotelRoom",
  "@type": "tm:ThingModel",
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "security": "nosec_sc",
  "base": "coap://{{URL}}:3000",
  "title": "simulated Hotel Room",
  "properties": {
    "power": {
      "title": "power",
      "type": "object",
      "properties": {
        "status": {
          "type": "boolean"
        }
      },
      "forms": [
        {
          "op": "readproperty",
          "contentType": "application/json;charset=utf-8",
          "href": "power"
        }
      ]
    },
    "content": {
      "title": "availableContent",
      "type": "string",
      "forms": [
        {
          "op": "readproperty",
          "contentType": "application/json;charset=utf-8",
          "href": "content"
        }
      ]
    },
    "status": {
      "type": "string",
      "description": "Current car status (readyToCharge, charging, stopCharging)",
      "readOnly": true,
      "enum": [
        "readyToCharge",
        "charging",
        "stopCharging"
      ],
      "forms": [
        {
          "href": "/ecar/properties/status",
          "contentType": "application/json",
          "op": [ "readproperty" ]
        }
      ]
    }
  },
  "actions": {
    "toggle": {
      "safe": true,
      "idempotent": false,
      "title": "togglePowerStatus",
      "forms": [
        {
          "op": "invokeaction",
          "contentType": "application/json;charset=utf-8",
          "href": "toggle"
        }
      ]
    },
    "setVolume": {
      "safe": true,
      "idempotent": false,
      "title": "setVolume",
      "forms": [
        {
          "op": "invokeaction",
          "contentType": "application/json;charset=utf-8",
          "href": "setvolume"
        }
      ]
    },
    "setBright": {
      "safe": true,
      "idempotent": false,
      "title": "setBright",
      "forms": [
        {
          "op": "invokeaction",
          "contentType": "application/json;charset=utf-8",
          "href": "setbright"
        }
      ]
    },
    "showText": {
      "safe": true,
      "idempotent": false,
      "title": "showText",
      "forms": [
        {
          "op": "invokeaction",
          "contentType": "application/json;charset=utf-8",
          "href": "showtext"
        }
      ]
    },
    "playVideo": {
      "safe": true,
      "idempotent": false,
      "title": "playVideo",
      "type": "playVOD",
      "forms": [
        {
          "op": "invokeaction",
          "contentType": "application/json;charset=utf-8",
          "href": "playvideo"
        }
      ],
      "input": {
        "type": "object",
        "properties": {
          "identifier": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      }
    },
    "pauseVideo": {
      "safe": true,
      "idempotent": false,
      "title": "pauseVideo",
      "type": "pauseVOD",
      "forms": [
        {
          "op": "invokeaction",
          "contentType": "application/json;charset=utf-8",
          "href": "pausevideo"
        }
      ]
    },
    "stopVideo": {
      "safe": true,
      "idempotent": false,
      "title": "stopVideo",
      "type": "stopVOD",
      "forms": [
        {
          "op": "invokeaction",
          "contentType": "application/json;charset=utf-8",
          "href": "stopvideo"
        }
      ]
    },
    "presentationWebApp": {
      "safe": true,
      "idempotent": false,
      "title": "presentationWebApp",
      "type": "presentationWebApp",
      "forms": [
        {
          "op": "invokeaction",
          "contentType": "application/json;charset=utf-8",
          "href": "presentationwebapp"
        }
      ],
      "input": {
        "type": "object",
        "properties": {
          "identifier": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      }
    },
    "launchNewsApp": {
      "safe": true,
      "idempotent": false,
      "title": "launchNewsApp",
      "forms": [
        {
          "op": "invokeaction",
          "contentType": "application/json;charset=utf-8",
          "href": "launchnewsapp"
        }
      ]
    }
  },
  "events": {
    "weatherAlert": {
      "title": "weatherAlert",
      "data": { "type": "object" },
      "forms": [
        {
          "op": "subscribeevent",
          "contentType": "application/json;charset=utf-8",
          "subprotocol": "longpoll",
          "href": "weatheralert"
        },
        {
          "op": "subscribeevent",
          "contentType": "application/json;charset=utf-8",
          "href": "ws://emulateddisplay.local:8888/weatheralert"
        }
      ]
    }
  }
}
